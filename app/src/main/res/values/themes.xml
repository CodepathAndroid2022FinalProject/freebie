<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base light theme -->
    <style name="Theme.Freebie" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/freebie_light_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/freebie_light_primary</item>
        <item name="colorOnPrimary">@color/freebie_light_onPrimary</item>
        <item name="colorPrimaryInverse">@color/freebie_light_primaryInverse</item>
        <item name="colorPrimaryContainer">@color/freebie_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/freebie_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/freebie_light_secondary</item>
        <item name="colorOnSecondary">@color/freebie_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/freebie_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/freebie_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/freebie_light_tertiary</item>
        <item name="colorOnTertiary">@color/freebie_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/freebie_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/freebie_light_onTertiaryContainer</item>
        <item name="colorError">@color/freebie_light_error</item>
        <item name="colorErrorContainer">@color/freebie_light_errorContainer</item>
        <item name="colorOnError">@color/freebie_light_onError</item>
        <item name="colorOnErrorContainer">@color/freebie_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/freebie_light_background</item>
        <item name="colorOnBackground">@color/freebie_light_onBackground</item>
        <item name="colorSurface">@color/freebie_light_surface</item>
        <item name="colorOnSurface">@color/freebie_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/freebie_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/freebie_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/freebie_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/freebie_light_inverseOnSurface</item>
        <item name="colorOutline">@color/freebie_light_outline</item>
    </style>
</resources>