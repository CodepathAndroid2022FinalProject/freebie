<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnSong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/ivAlbum"
        android:ellipsize="end"
        android:maxWidth="224dp"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Song Title" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSongTitle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ivAlbum"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxWidth="224dp"
        android:maxLines="1"
        tools:text="Artist Name" />

    <TextView
        android:id="@+id/tvSongLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/btnLike"
        tools:text="2:45" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLike"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="50dp"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:icon="@drawable/ic_action_favorite_outline" />

</RelativeLayout>