<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base dark theme -->
    <style name="Theme.Freebie" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Disallow "Force dark theme" -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/freebie_dark_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorPrimary">@color/freebie_dark_primary</item>
        <item name="colorOnPrimary">@color/freebie_dark_onPrimary</item>
        <item name="colorPrimaryInverse">@color/freebie_dark_primaryInverse</item>
        <item name="colorPrimaryContainer">@color/freebie_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/freebie_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/freebie_dark_secondary</item>
        <item name="colorOnSecondary">@color/freebie_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/freebie_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/freebie_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/freebie_dark_tertiary</item>
        <item name="colorOnTertiary">@color/freebie_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/freebie_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/freebie_dark_onTertiaryContainer</item>
        <item name="colorError">@color/freebie_dark_error</item>
        <item name="colorErrorContainer">@color/freebie_dark_errorContainer</item>
        <item name="colorOnError">@color/freebie_dark_onError</item>
        <item name="colorOnErrorContainer">@color/freebie_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/freebie_dark_background</item>
        <item name="colorOnBackground">@color/freebie_dark_onBackground</item>
        <item name="colorSurface">@color/freebie_dark_surface</item>
        <item name="colorOnSurface">@color/freebie_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/freebie_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/freebie_dark_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/freebie_dark_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/freebie_dark_inverseOnSurface</item>
        <item name="colorOutline">@color/freebie_dark_outline</item>
    </style>
</resources>